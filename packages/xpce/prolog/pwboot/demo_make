.SUFFIXES: .qof .pl

.pl.qof:
	@rm -f $@
	qpc -L ../library -i ../library/pce_qpc.qof -Nc $*.pl

DEMOQOFS=biff.qof \
	chess.qof \
	constraint.qof \
	cursor.qof \
	dialog.qof \
	event_hierarchy.qof \
	fontviewer.qof \
	ftplog.qof \
	graph.qof \
	imageviewer.qof \
	ispell.qof \
	juggler.qof \
	kangaroo.qof

CTBQOFS=../contrib/rubik/rubikpce.qof \
	../contrib/rubik/rubik.qof \
	../contrib/rubik/maplist.qof \
	../contrib/contrib.qof


all:	$(DEMOQOFS) $(CTBQOFS)

clean:
	rm -f $(DEMOQOFS) $(CTBQOFS)
