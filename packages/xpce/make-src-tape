#!/bin/sh

version=`cat VERSION`
out=xpce-$version.tar.gz
compress=gzip

rm -f xpce-$version
if [ ! "o$1" = "o-q" ]; then
  cp /dev/null srcfiles
  echo -n "Collecting distribution files "
  for d in `find . -name CVS -type d -print`; do
      echo -n "."
      dir=`dirname $d`
      awk -F/ '{printf("%s/%s\n", "'$dir'", $2)}' $dir/CVS/Entries >> srcfiles
  done

find ./bitmaps \( -name '*.bm' -o -name '*.xpm' \) -print >> srcfiles
echo ./bitmaps/README >> srcfiles
find ./appl-help -name '*.hlp' -print >> srcfiles

cat >> srcfiles << EOF
./prolog/lib/man/classification.obj
./bitmaps/README
EOF

  echo "done"
fi

grep -v src/msw/ srcfiles | \
grep -v prolog/pwboot/ | \
grep -v quintus/ | \
grep -v /prowindows | \
	sed "s@^\./@xpce-$version/@" > tapefiles

cd ..
ln -s xpce xpce-$version
tar cvfT - xpce/tapefiles | $compress > $out
rm -f xpce-$version


