#!/bin/sh
# Generate Emacs tag table.  Either invoke as
#
#	./mktags x11
# or
#	./mktags msw
#
# To create a tag-table for the proper environment.

if [ ! -z "$1" ]; then win="$1"; fi

files=""

for d in h adt ari evt gnu gra itf ker men msg prg rel txt unx win $win; do
  files="$files `echo $d/*.[ch]`"
done

etags $files