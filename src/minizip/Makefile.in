srcdir=@srcdir@
@VPATH@ @srcdir@

CC=@CC@
EXEEXT = @EXEEXT@
COFLAGS=@COFLAGS@
CWFLAGS=@CWFLAGS@
CIFLAGS=@CIFLAGS@
CMFLAGS=@CMFLAGS@
CPFLAGS=
CFLAGS=	$(CWFLAGS) $(COFLAGS) $(CIFLAGS) $(CMFLAGS) $(CPFLAGS)

ZIPOBJS=zip.o unzip.o ioapi.o

all:	$(ZIPOBJS)

.c.o:
	$(CC) -c -I.. $(CFLAGS) $< @COUTOPT@

################################################################
# Cleanup
################################################################

clean:
	rm -f *% *~ $(ZIPOBJS)

profclean:
	rm -f *.gcda

distclean: clean profclean
	rm -f Makefile

