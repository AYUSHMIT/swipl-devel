################################################################
# This Makefile is created from Makefile.in by the main Prolog
# configuration in .../pl/src/configure.
################################################################

prefix=@prefix@

PKG=	clib \
	table \
	sgml \
	sgml/RDF \
	xpce

CONFIG=	./configure --enable-mt --prefix=$(prefix)

all:	objects
	
objects:
	for p in $(PKG); do \
	    ( cd $$p && $(MAKE) ) \
        done
	
install:
	for p in $(PKG); do \
	    ( cd $$p && $(MAKE) install ) \
        done
	
configure::
	for p in $(PKG); do \
	    ( cd $$p && $(CONFIG) ) \
        done
	
distclean:
	for p in $(PKG); do \
	    ( cd $$p && $(MAKE) distclean ) \
        done

clean:
	for p in $(PKG); do \
	    ( cd $$p && $(MAKE) clean ) \
        done

