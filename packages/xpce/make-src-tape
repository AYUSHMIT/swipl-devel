#!/bin/sh

version=`cat VERSION`
out=xpce-$version.tar.gz
compress=gzip

rm -f xpce-$version
if [ ! "o$1" = "o-q" ]; then
  cp /dev/null cvsfiles
  echo -n "Collecting distribution files "
  for d in `find . -name CVS -type d -print`; do
      echo -n "."
      dir=`dirname $d`
      grep '^/' $dir/CVS/Entries | \
          awk -F/ '{printf("%s/%s\n", "'$dir'", $2)}' >> cvsfiles
  done

cp /dev/null srcfiles
find ./bitmaps \( -name '*.bm' -o -name '*.xpm' -o -name '*.xbm' \) -print >> srcfiles
find ./appl-help -name '*.hlp' -print >> srcfiles

cat >> srcfiles << EOF
./prolog/lib/man/classification.obj
./bitmaps/README
EOF

  echo "done"
fi

cat cvsfiles srcfiles | \
  grep -v src/msw/ | \
  grep -v prolog/pwboot/ | \
  grep -v quintus/ | \
  grep -v /prowindows | \
	  sed "s@^\./@xpce-$version/@" > tapefiles

cd ..
rm -f xpce-$version
ln -s xpce xpce-$version
tar cvfT - xpce/tapefiles | $compress > $out
rm -f xpce-$version


